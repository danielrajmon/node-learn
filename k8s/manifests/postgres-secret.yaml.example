apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: node-learn
type: Opaque
stringData:
  # Main PostgreSQL Configuration
  POSTGRES_HOST: "postgres"
  POSTGRES_PORT: "5432"
  POSTGRES_DB: "node_learn"
  POSTGRES_USER: "postgres"
  POSTGRES_PASSWORD: "postgres"
  
  # Per-service Database URLs (created by init container)
  AUTH_DATABASE_URL: "postgresql://postgres:postgres@postgres:5432/auth"
  QUESTIONS_DATABASE_URL: "postgresql://postgres:postgres@postgres:5432/questions"
  QUIZ_DATABASE_URL: "postgresql://postgres:postgres@postgres:5432/quiz"
  ACHIEVEMENTS_DATABASE_URL: "postgresql://postgres:postgres@postgres:5432/achievements"
  LEADERBOARD_DATABASE_URL: "postgresql://postgres:postgres@postgres:5432/leaderboard"
  ADMIN_DATABASE_URL: "postgresql://postgres:postgres@postgres:5432/admin"
  MAINTENANCE_DATABASE_URL: "postgresql://postgres:postgres@postgres:5432/maintenance"
  
  # JWT Secret (generate with: openssl rand -base64 32)
  JWT_SECRET: "<generate-and-fill>"
  # Google OAuth2
  GOOGLE_CLIENT_ID: "<google-client-id>"
  GOOGLE_CLIENT_SECRET: "<google-client-secret>"
  GOOGLE_CALLBACK_URL: "https://your-domain.example.com/api/auth/google/callback"
  # Frontend URL
  FRONTEND_URL: "https://your-domain.example.com"
